---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { LINKS } from '../../lib/constants'
import { Linkedin, Github, Mail } from 'lucide-react'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div
    class="relative flex h-full w-full overflow-hidden rounded-2xl 
           bg-white/90 dark:bg-zinc-900/90 p-6 backdrop-blur-xl"
  >
    <!-- Left content -->
    <div class="z-10 flex flex-col justify-between gap-6">
      <div class="space-y-2">
        <h6 class="text-xs uppercase tracking-widest text-gray-500 dark:text-gray-400">
          {t('intro.welcome')}
        </h6>

        <p
          class="max-w-md text-xl font-normal leading-snug text-gray-900 dark:text-white md:text-2xl"
          set:html={t('intro.title')}
        />

        <!-- Green accent line -->
        <div class="mt-2 h-1 w-12 rounded-full bg-gradient-to-r from-green-400 to-green-600" />
      </div>

      <!-- Social buttons -->
      <div class="flex gap-3">
        <a href={LINKS.github} target="_blank" aria-label="github profile">
          <Button class="group rounded-xl bg-zinc-100/80 dark:bg-zinc-800/80 p-3 transition-all hover:-translate-y-1 hover:bg-zinc-200 dark:hover:bg-zinc-700 hover:shadow-lg hover:shadow-green-400/20">
            <Github stroke="currentColor" class="h-5 w-5 text-gray-900 dark:text-white group-hover:text-green-400" />
            <span class="sr-only">{t('intro.sr.github')}</span>
          </Button>
        </a>

        <a href={LINKS.linkedin} target="_blank" aria-label="linkedin profile">
          <Button class="group rounded-xl bg-zinc-100/80 dark:bg-zinc-800/80 p-3 transition-all hover:-translate-y-1 hover:bg-zinc-200 dark:hover:bg-zinc-700 hover:shadow-lg hover:shadow-green-400/20">
            <Linkedin stroke="currentColor" class="h-5 w-5 text-gray-900 dark:text-white group-hover:text-green-400" />
            <span class="sr-only">{t('intro.sr.linkedin')}</span>
          </Button>
        </a>

        <a href={LINKS.mail} target="_blank" aria-label="email">
          <Button class="group rounded-xl bg-zinc-100/80 dark:bg-zinc-800/80 p-3 transition-all hover:-translate-y-1 hover:bg-zinc-200 dark:hover:bg-zinc-700 hover:shadow-lg hover:shadow-green-400/20">
            <Mail stroke="currentColor" class="h-5 w-5 text-gray-900 dark:text-white group-hover:text-green-400" />
            <span class="sr-only">{t('intro.sr.email')}</span>
          </Button>
        </a>
      </div>
    </div>

    <!-- Image -->
    <div class="pointer-events-none absolute right-4 top-1/2 hidden -translate-y-1/2 md:block">
      <div class="relative rounded-full bg-gradient-to-tr from-green-400 to-green-600 p-1">
        <img
          src="/me.png"
          alt="memoji"
          width="220"
          height="220"
          class="rounded-full bg-white dark:bg-zinc-900 object-contain"
        />
      </div>
    </div>

    <!-- Ambient glow -->
    <div class="absolute -bottom-24 -right-24 h-64 w-64 rounded-full bg-green-500/20 blur-3xl" />
  </div>
</Card>





